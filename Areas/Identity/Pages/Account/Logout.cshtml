@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <header  >
            <h1 class="d-flex justify-content-center mt-4">@ViewData["Title"]</h1>
            @{
                if (User.Identity.IsAuthenticated)
                {
                    <form class="form-inline d-flex justify-content-center p-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-link btn btn-link text-dark btn btn-danger ">Click here to Logout</button>
                    </form>
                }
                
            }
        </header>
    </div>
</div>