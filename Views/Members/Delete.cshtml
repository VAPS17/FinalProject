@model FinalProject.Models.Member

@{
    ViewData["Title"] = "Delete";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="d-flex justify-content-center" style="margin-top:100px">
                <h3>Delete Member</h3>
            </div>
            <div class="d-flex justify-content-center">
                <h4>Are you sure you want to delete this member?</h4>
            </div>
            <div class="d-flex justify-content-center" style="margin-top:30px">
                <dl class="row row-cols-2 col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EmployeeNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EmployeeNumber)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Function)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Function.Name)
                    </dd>
                </dl>
            </div>
            <div class="d-flex justify-content-center" style="margin-top:30px">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="MemberId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-outline-primary" style="margin-left:15px">Back to members</a>
                </form>
            </div>
        </main>
    </div>
</div>
