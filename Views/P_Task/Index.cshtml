@model P_TaskListViewModel

@{
    ViewData["Title"] = "Task List";
    var ID = ViewBag.ID;
    var T_Project = ViewBag.T_Project;
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <h1>Project: @T_Project</h1>

            <p>
                <a asp-action="Create" asp-route-id="@ID" class="btn btn-success">Create a new task</a>
            </p>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Search</h5>
                    <form asp-action="Index" method="get">
                        <input name="Name of Task" type="search" class="form-control" value="@Model.P_TaskStringSearched" />
                        <div class="mt-3">
                            <input type="submit" value="Search" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary">Clear</a>
                        </div>
                    </form>
                </div>
            </div>

            <p></p>

            <div class="card">
                <div class="card-header" style="background-color: #6666ff;">
                    <h2 style="text-align:center"><i class="fas fa-table me-1"></i>Tasks</h2>
                </div>
                <div class="container" style="background-color: #ccccff;">
                    <p></p>

                    @foreach (var task in Model.P_Task)
                    {
                        @if (task.State.StateId == 1)
                        {
                            <p></p>
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-10"><h4><strong>@task.P_TaskName</strong></h4></div>
                                        <div class="col-2">
                                            <ul class="navbar-nav">
                                                <li class="dropdown">
                                                    <a class="nav-link dropdown-toggle text-right" id="navbarDropdown" role="button" data-bs-toggle="dropdown" style="color:gray"><i class="fas fa-cog"></i></a>
                                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                                        <li><a asp-action="Edit" asp-route-id="@task.P_TaskId" class="dropdown-item dropdown-item-text"><i class="fas fa-edit"></i> Edit</a></li>
                                                        <li><hr class="dropdown-divider" /></li>
                                                        <li><a asp-action="Delete" asp-route-id="@task.P_TaskId" class="dropdown-item"><i class="fas fa-trash-alt"></i> Delete</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2 align-self-center">
                                            <h5><strong>Comemtary:</strong></h5>
                                        </div>
                                        <div class="col-2">
                                            @if (task.Comentary != null)
                                            {
                                                <button class="btn btn-link order-1 order-lg-0 me-4 me-lg-0" id="CreationContentToggle">
                                                    <i class="fas fa-plus-circle" color="green"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-link order-1 order-lg-0 me-4 me-lg-0" id="CreationContentToggle" disabled>
                                                    <i class="fas fa-plus-circle" color="gray"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                    <div class="comentary-card creation">
                                        <h6>@task.Comentary</h6>
                                    </div>
                                    <p class="card-text lead">Created at: @task.CreationDate</p>
                                    <p class="card-text lead">Deadline at: @task.Deadline</p>

                                    <a class="btn btn-primary" asp-route-id="@task.P_TaskId" asp-action="TaskInProgress">Inicialize</a>

                                </div>
                            </div>
                        }
                    }
                    <p></p>

                    @foreach (var task in Model.P_Task)
                    {
                        @if (task.State.StateId == 2)
                        {
                            <p></p>
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-10"><h4><strong>@task.P_TaskName</strong></h4></div>
                                        <div class="col-2">
                                            <ul class="navbar-nav">
                                                <li class="dropdown">
                                                    <a class="nav-link dropdown-toggle text-right" id="navbarDropdown" role="button" data-bs-toggle="dropdown" style="color:gray"><i class="fas fa-cog"></i></a>
                                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                                        <li><a asp-action="Edit" asp-route-id="@task.P_TaskId" class="dropdown-item dropdown-item-text"><i class="fas fa-edit"></i> Edit</a></li>
                                                        <li><hr class="dropdown-divider" /></li>
                                                        <li><a asp-action="Delete" asp-route-id="@task.P_TaskId" class="dropdown-item"><i class="fas fa-trash-alt"></i> Delete</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2 align-self-center">
                                            <h5><strong>Comemtary:</strong></h5>
                                        </div>
                                        <div class="col-2">
                                            @if (task.Comentary != null)
                                            {
                                                <button class="btn btn-link order-1 order-lg-0 me-4 me-lg-0" id="InitialContentToggle">
                                                    <i class="fas fa-plus-circle" color="green"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-link order-1 order-lg-0 me-4 me-lg-0" id="InitialContentToggle" disabled>
                                                    <i class="fas fa-plus-circle" color="gray"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                    <div class="comentary-card initialize">
                                        <h6>@task.Comentary</h6>
                                    </div>
                                    <p class="card-text lead">Created at: @task.CreationDate</p>
                                    <p class="card-text lead">Created at: @task.StartDate</p>
                                    <p class="card-text lead">Deadline at: @task.Deadline</p>

                                    <a class="btn btn-primary" asp-route-id="@task.P_TaskId" asp-action="TaskTerminate">Terminate</a>

                                </div>
                            </div>
                        }
                    }
                    <p></p>

                    @foreach (var task in Model.P_Task)
                    {
                        @if (task.State.StateId == 3)
                        {
                            <p></p>
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-10"><h4><strong>@task.P_TaskName</strong></h4></div>
                                        <div class="col-2">
                                            <ul class="navbar-nav">
                                                <li class="dropdown">
                                                    <a class="nav-link dropdown-toggle text-right" id="navbarDropdown" role="button" data-bs-toggle="dropdown" style="color:gray"><i class="fas fa-cog"></i></a>
                                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                                        <li><a asp-action="Edit" asp-route-id="@task.P_TaskId" class="dropdown-item dropdown-item-text"><i class="fas fa-edit"></i> Edit</a></li>
                                                        <li><hr class="dropdown-divider" /></li>
                                                        <li><a asp-action="Delete" asp-route-id="@task.P_TaskId" class="dropdown-item"><i class="fas fa-trash-alt"></i> Delete</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2 align-self-center">
                                            <h5><strong>Comemtary:</strong></h5>
                                        </div>
                                        <div class="col-2">
                                            @if (task.Comentary != null)
                                            {
                                                <button class="btn btn-link order-1 order-lg-0 me-4 me-lg-0" id="TerminateContentToggle">
                                                    <i class="fas fa-plus-circle" color="green"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-link order-1 order-lg-0 me-4 me-lg-0" id="TerminateContentToggle" disabled>
                                                    <i class="fas fa-plus-circle" color="gray"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                    <div class="comentary-card terminate">
                                        <h6>@task.Comentary</h6>
                                    </div>
                                    <p class="card-text lead">Created at: @task.CreationDate</p>
                                    <p class="card-text lead">Created at: @task.StartDate</p>
                                    <p class="card-text lead">Created at: @task.EffectiveEndDate</p>
                                    <p class="card-text lead">Deadline at: @task.Deadline</p>

                                    <!--<a class="btn btn-primary" asp-route-id="@task.P_TaskId" asp-action="TaskTerminate">Terminate</a>-->

                                </div>
                            </div>
                        }
                    }
                    <p></p>
                </div>
            </div>

            <nav class="mt-3">
                <ul class="pagination">
                    @{
                        if (Model.P_TaskPagingInfo.CurrentPage == 1)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">First</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="1">First</a>
                            </li>
                        }

                        int firstPage = Model.P_TaskPagingInfo.CurrentPage - PagingInfo.NUMBER_PAGES_SHOW_BEFORE_AFTER;
                        if (firstPage < 1) firstPage = 1;

                        int lastPage = Model.P_TaskPagingInfo.CurrentPage + PagingInfo.NUMBER_PAGES_SHOW_BEFORE_AFTER;
                        if (lastPage > Model.P_TaskPagingInfo.TotalPages) lastPage = Model.P_TaskPagingInfo.TotalPages;

                        for (int p = firstPage; p <= lastPage; p++)
                        {
                            if (p == Model.P_TaskPagingInfo.CurrentPage)
                            {
                                <li class="page-item active">
                                    <a class="page-link" href="#">@p <span class="sr-only">(current)</span></a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
                                </li>
                            }
                        }

                        if (Model.P_TaskPagingInfo.CurrentPage == Model.P_TaskPagingInfo.TotalPages)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Last</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@Model.P_TaskPagingInfo.TotalPages">Last</a>
                            </li>
                        }
                    }
                </ul>
            </nav>
        </main>
    </div>
</div>

<script src="~/js/hideCreation.js"></script>
<script src="~/js/hideInitialize.js"></script>
<script src="~/js/hideTerminate.js"></script>