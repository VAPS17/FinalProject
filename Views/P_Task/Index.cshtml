@model IEnumerable<FinalProject.Models.P_Task>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Project Manager</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Projects
                        </a>
                        <a class="nav-link" asp-controller="P_Task" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Tarefas_Teste
                        </a>
                        <div class="sb-sidenav-menu-heading">Interface</div>
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            About
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Utilizador
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <h1>Index</h1>

                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.P_TaskName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comentary)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.P_TaskState)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.P_TaskName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comentary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.P_TaskState)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.P_TaskId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.P_TaskId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.P_TaskId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2021</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
