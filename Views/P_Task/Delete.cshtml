@model FinalProject.Models.P_Task

@{
    ViewData["Title"] = "Delete Task";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <h1 class="text-danger">Delete Task</h1>

            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        Associated Project:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Project.Name)
                    </dd>
                    <dt class="col-sm-3">
                        Name:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.P_TaskName)
                    </dd>
                    <dt class="col-sm-3">
                        Associated Member:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Project.Name)
                    </dd>
                    <dt class="col-sm-3">
                        Deadline:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Deadline)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="P_TaskId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-route-id="@Model.ProjectId" asp-controller="Projects" asp-action="Details" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </main>
    </div>
</div>
