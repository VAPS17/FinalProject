@model FinalProject.Models.P_Task

@{
    ViewData["Title"] = "Create Task";
    var ID = ViewBag.ID;
    var Creation = DateTime.Now.Date;
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <h1>Task Creation</h1>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="P_TaskName" class="control-label">Name</label>
                    <input asp-for="P_TaskName" class="form-control" />
                    <span asp-validation-for="P_TaskName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comentary" class="control-label"></label>
                    <textarea asp-for="Comentary" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Comentary" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top: 20px">
                    <label asp-for="Deadline" class="control-label">Deadline</label>
                    <input asp-for="Deadline" class="form-control" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-route-id="@ID" type="submit" value="Create" class="btn btn-primary" />
                    <a asp-route-id="@ID" asp-controller="Projects" asp-action="Details" class="btn btn-secondary">Cancel</a>
                </div>
            </form>

        </main>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
