@model IEnumerable<FinalProject.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

   <div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
          <div class="d-flex justify-content-center" style="margin-top:100px">
            <h1>List of Projects</h1>
            <a asp-action="Create" class="btn btn-success">Create</a>
          </div>

          <div style="margin-top: 25px">
            <table class="table" style="margin-top: 20px">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProjectCreator)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumberEmployees)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FinishDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DecisiveDeliveryDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectCreator)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberEmployees)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FinishDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DecisiveDeliveryDate)
                            </td>
                            <td>

                                <div class="d-flex">
                                    <a asp-action="Create" asp-route-id="@item.ProjectId" class="btn btn-success">Create</a>
                                    <a asp-action="Edit" asp-route-id="@item.ProjectId" class="btn btn-primary" style="margin-left:3px">Edit</a>
                                    <a asp-controller="P_Task" asp-action="Index" asp-route-id="@item.ProjectId" class="btn btn-info" style="margin-left:3px">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-danger" style="margin-left:3px">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>
</div>