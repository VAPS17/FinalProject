@model IEnumerable<FinalProject.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <h1>Index</h1>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProjectCreator)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumberEmployees)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FinishDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DecisiveDeliveryDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectCreator)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberEmployees)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FinishDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DecisiveDeliveryDate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                                <a asp-controller="P_Task" asp-route-id="@item.ProjectId" asp-action="Index">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>
</div>
