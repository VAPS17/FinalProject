@model FinalProject.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="d-flex justify-content-center">
                <div>
                    <h3 class="justify-content-center">Delete Project</h3>
                    <h4 class="justify-content-center">Are you sure you want to delete this Project?</h4>


                    <div style="margin-top: 30px">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProjectCreatorId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ProjectCreatorId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.StartDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.StartDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FinishDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FinishDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DecisiveDeliveryDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DecisiveDeliveryDate)
                            </dd>
                        </dl>

                    </div>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ProjectId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-outline-primary">Back to Projects</a>
                        </form>
                    
                    </div>
                </div>
        </main>
    </div>
</div>