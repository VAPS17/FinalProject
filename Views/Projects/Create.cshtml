@model FinalProject.Models.Project

@{
    ViewData["Title"] = "Create";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="d-flex justify-content-center" style="margin-top:100px">
                <h3>Create a Project</h3>
            </div>


            <div class="d-flex justify-content-center" style="margin-top: 30px">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Project Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top: 20px">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top: 20px">
                            <label asp-for="DecisiveDeliveryDate" class="control-label">Decisive Delivery Date</label>
                            <input asp-for="DecisiveDeliveryDate" class="form-control" />
                            <span asp-validation-for="DecisiveDeliveryDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center" style="margin-top: 30px">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-primary" style="margin-left:15px">Back to Projects</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
