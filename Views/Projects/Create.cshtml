@model FinalProject.Models.Project

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center" style="margin-top:100px">
    <h3>Create a Project</h3>
</div>


<div class="row" style="margin-top: 20px">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Project Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"  id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <label asp-for="ProjectCreator" class="control-label">Project Creator</label>
                <input asp-for="ProjectCreator" class="form-control" />
                <span asp-validation-for="ProjectCreator" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <label asp-for="NumberEmployees" class="control-label">Number of Participants</label>
                <input asp-for="NumberEmployees" class="form-control" />
                <span asp-validation-for="NumberEmployees" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <label asp-for="DecisiveDeliveryDate" class="control-label">Decisive Delivery Date</label>
                <input asp-for="DecisiveDeliveryDate" class="form-control" />
                <span asp-validation-for="DecisiveDeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div style="margin-top: 5px">
                <a asp-action="Index" class="btn btn-outline-primary">Back to Projects</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
