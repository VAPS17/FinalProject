@model FinalProject.Models.Project

@{
    ViewData["Title"] = "Members List";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="container" style="margin-top:40px">
                <h1>List of Members</h1>
            </div>

            @foreach (var memberProject in Model.ProjectMembers)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">@memberProject.Member.Name</h5>
                        <p class="card-text">Employee Number: @memberProject.Member.EmployeeNumber</p>
                        <p class="card-text">Function: @memberProject.Member.Function.Name</p>

                        <form asp-action="RemoveMember" method="post">
                            <button type="submit" class="btn btn-danger" value="@memberProject.Member.MemberId" name="MemberProject" id="btnMemberProject1" autocomplete="off">Remove</button>
                        </form>

                    </div>
                </div>
            }
        </main>
    </div>
</div>