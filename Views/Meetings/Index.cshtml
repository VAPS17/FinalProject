@model IEnumerable<FinalProject.Models.Meeting>

@{
    ViewData["Title"] = "Index";
}


<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div style="margin-top: 40px">
                <h1>List of Meetings</h1>
                    <h4>Do you want to create a new Meeting?</h4>
                    <a asp-action="Create" class="btn btn-success">Create Meeting</a>
            </div>

            @foreach (var item in Model)
            {

                <div class="card" style="margin-top:50px">
                    <div class="card-header text-center">
                        <h3>@item.Project.Name</h3>
                    </div>
                    <div class="card-body" style="text-align:center">
                        <h5>Topic</h5>
                        <p> @item.Topic</p>
                        <h5>Description</h5>
                        <p> @item.Description</p>
                        <h5>Date and Hour</h5>
                        <p> @item.DateandTime</p>
                        <div class="d-flex justify-content-md-end" style="margin-top:50px">
                            <a asp-action="Edit" asp-route-id="@item.MeetingId" class="btn btn-info" style="margin-left:3px">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.MeetingId" class="btn btn-danger" style="margin-left:3px">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </main>
    </div>
</div>