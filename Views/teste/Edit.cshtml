@model FinalProject.Models.P_Task

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Project Manager</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Projects
                        </a>
                        <a class="nav-link" asp-controller="P_Task" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Tarefas_Teste
                        </a>
                        <div class="sb-sidenav-menu-heading">Interface</div>
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            About
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Utilizador
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <h1>Edit</h1>

                <h4>P_Task</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="P_TaskId" />
                            <div class="form-group">
                                <label asp-for="P_TaskName" class="control-label"></label>
                                <input asp-for="P_TaskName" class="form-control" />
                                <span asp-validation-for="P_TaskName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Comentary" class="control-label"></label>
                                <input asp-for="Comentary" class="form-control" />
                                <span asp-validation-for="Comentary" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="P_TaskState" class="control-label"></label>
                                <input asp-for="P_TaskState" class="form-control" />
                                <span asp-validation-for="P_TaskState" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2021</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
